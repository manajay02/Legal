          "name": "Audit Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documentText\": \"Employment contract: The employee shall work 48 hours per week with no fixed days off. Salary is LKR 50,000 per month. Employer can terminate with 24 hours notice.\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/compliance/audit",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "compliance", "audit"]
            },
            "description": "Audit document for legal compliance with Sri Lankan laws"
          }
        }
      ]
    },
