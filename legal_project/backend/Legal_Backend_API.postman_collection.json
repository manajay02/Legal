              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"argumentText\": \"The defendant breached the contract by failing to deliver goods on the agreed date. This is evidenced by the purchase order dated January 1, 2023, and the invoice showing non-delivery.\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/arguments/analyze",
              "protocol": "http",
